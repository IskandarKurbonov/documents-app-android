<resources>

    <style name="AppBaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorAppBar</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>

        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Local customizations -->
    <!-- Activities themes-->

    <style name="NoActionBarTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WebViewerActivityStyle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="DialogCommonTheme" parent="NoActionBarTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="MediaTheme" parent="NoActionBarTheme">
        <item name="android:windowEnableSplitTouch">true</item>
        <item name="android:splitMotionEvents">true</item>
        <item name="android:navigationBarColor">@color/colorMediaBackground</item>
        <item name="android:statusBarColor">@color/colorMediaBackground</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- TextAppearance -->

    <style name="TextAppearance.Common.Title" parent="TextAppearance.MaterialComponents.Headline6" />

    <style name="TextAppearance.Common.TabItem" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">@dimen/fonts_size_medium</item>
    </style>

    <style name="TextAppearance.Common.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">@dimen/fonts_size_medium</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Widgets -->

    <style name="Widget.Common.TextView" parent="AppTheme">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/fonts_size_medium</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.Common.TextView.Secondary">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="Widget.Common.TextView.Clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAppearance">@style/TextAppearance.Common.Button</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:maxLines">10</item>
    </style>

    <style name="Widget.Common.TextView.Small">
        <item name="android:textSize">@dimen/fonts_size_small</item>
    </style>

    <style name="Widget.Common.TextView.Small.Secondary">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="Widget.Common.TextView.Micro">
        <item name="android:textSize">@dimen/fonts_size_micro</item>
    </style>

    <style name="Widget.Common.TextView.Micro.Secondary">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="Widget.Common.TextView.Large">
        <item name="android:textSize">@dimen/fonts_size_large</item>
    </style>

    <style name="Widget.Common.TextView.Header" parent="Widget.Common.TextView.Small.Secondary">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginStart">@dimen/default_margin_large</item>
        <item name="android:layout_marginEnd">@dimen/default_margin_large</item>
        <item name="android:layout_marginTop">@dimen/default_margin_large</item>
        <item name="android:layout_marginBottom">@dimen/default_margin_small</item>
    </style>

    <style name="Widget.Common.TextView.Title">
        <item name="android:textAppearance">@style/TextAppearance.Common.Title</item>
        <item name="android:textSize">@dimen/fonts_size_xlarge</item>
    </style>

    <style name="Widget.Common.TextView.Description" parent="Widget.Common.TextView.Small.Secondary">
        <item name="android:maxLines">20</item>
    </style>

    <style name="Widget.Common.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.Common.TabItem</item>
        <item name="tabSelectedTextColor">?attr/colorPrimary</item>
        <item name="tabTextColor">@color/colorTextSecondary</item>
        <item name="tabMode">auto</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_tab_layout_height</item>
    </style>

    <style name="Widget.Common.TabLayout.Fixed">
        <item name="tabMode">fixed</item>
    </style>

    <style name="Widget.Common.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_filter_chip_text_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipBackgroundColor">@color/color_filter_chip_selector</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="chipStrokeColor">@color/color_filter_chip_border_selector</item>
    </style>

    <style name="Widget.Common.Chip.Closable">
        <item name="closeIconEnabled">true</item>
        <item name="closeIconTint">@color/colorWhite</item>
        <item name="closeIconVisible">false</item>
        <item name="android:textColor">@color/color_filter_chip_text_author_selector</item>
    </style>

    <style name="Widget.Common.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">@dimen/default_screen_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="boxBackgroundColor">@color/colorBackground</item>
    </style>

    <style name="Widget.Common.TextInputLayout.Surface">
        <item name="boxBackgroundColor">@color/colorSurface</item>
    </style>

    <!--  Layouts  -->
    <style name="LoginTextInputContainer">
        <item name="android:layout_width">@dimen/default_button_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/default_margin_xlarge</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Buttons -->

    <style name="CommonButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:layout_width">@dimen/default_button_width</item>
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="android:layout_marginTop">@dimen/default_margin_large</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.Common.Button</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/default_corner_radius_button</item>
        <item name="rippleColor">?colorControlHighlight</item>
        <item name="android:theme">@style/CommonButton.Overlay</item>
    </style>

    <style name="SmallButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">@dimen/default_corner_radius_button</item>
    </style>

    <style name="CommonButton.Overlay" parent="ThemeOverlay.Material3.Button.ElevatedButton">
        <item name="colorContainer">?attr/colorPrimary</item>
        <item name="colorOnContainer">?attr/colorOnPrimary</item>
    </style>

    <style name="CommonButton.Error">
        <item name="android:theme">@style/CommonButton.Error.Overlay</item>
    </style>

    <style name="CommonButton.Error.Overlay" parent="ThemeOverlay.Material3.Button.ElevatedButton">
        <item name="colorContainer">?attr/colorError</item>
        <item name="colorOnContainer">?attr/colorOnError</item>
    </style>

    <style name="CommonTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.Common.Button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="CommonIconButton" parent="Widget.Material3.Button.IconButton">
        <item name="android:layout_width">@dimen/item_one_line_height</item>
        <item name="android:layout_height">@dimen/item_one_line_height</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/image_default_size</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
    </style>

    <style name="CommonIconButton.Secondary">
        <item name="iconTint">@color/colorTextSecondary</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- EditTexts -->
    <style name="MediumEditText" parent="Widget.Common.TextInputLayout">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/fonts_size_medium</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Context common -->
    <style name="ContextMenuDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorSecondary</item>
    </style>

    <!-- Context dialog/popups-->
    <style name="ContextListLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_one_line_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">@dimen/screen_margin_large</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ContextListImage">
        <item name="android:layout_width">@dimen/image_default_size</item>
        <item name="android:layout_height">@dimen/image_default_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/default_margin_large</item>
        <item name="android:layout_marginEnd">@dimen/default_margin_large</item>
        <item name="android:tint">@color/colorTextSecondary</item>
    </style>

    <style name="ContextListImage.Favorite" parent="ContextListImage">
        <item name="android:tint">@null</item>
    </style>

    <style name="ContextListAccountsLayout" parent="ContextListLayout">
        <item name="android:layout_height">@dimen/item_two_line_height</item>
    </style>

    <style name="ContextListAccountImage" parent="ContextListImage">
        <item name="android:layout_width">@dimen/image_size</item>
        <item name="android:layout_height">@dimen/image_size</item>
        <item name="android:padding">@dimen/image_padding_icon</item>
    </style>

    <!-- Popup menu -->
    <style name="PopupLayout" parent="ContextListLayout">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MainAppBar" parent="Widget.MaterialComponents.AppBarLayout.Surface" />

    <style name="MainBottomBar" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/colorBottomBar</item>
    </style>

    <style name="MainToolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="AccentButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/default_login_accent_button_height</item>
    </style>

    <style name="AuthAccentButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/screen_auth_login_accent_button_height</item>
        <item name="android:textSize">@dimen/screen_auth_accent_button_text_size</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AccentTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">@dimen/default_login_accent_button_height</item>
    </style>

    <style name="AccentTextButtonSmall" parent="AccentTextButton">
        <item name="android:textSize">@dimen/fonts_size_small</item>
        <item name="textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="MainPopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

</resources>
