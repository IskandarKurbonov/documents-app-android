<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="@dimen/default_corner_radius_medium"/>
            <stroke
                android:width="1dp"
                android:color="@color/colorLightGrey" />
            <padding
                android:top="@dimen/default_corner_radius_medium"
                android:left="@dimen/default_corner_radius_medium"
                android:right="@dimen/default_corner_radius_medium"
                android:bottom="@dimen/default_corner_radius_medium"/>
        </shape>
    </item>
</layer-list>