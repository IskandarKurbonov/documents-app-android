<?xml version="1.0" encoding="utf-8"?><!-- Workaround for foreground < v23 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_icon_selectable_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/view_icon_selectable_image"
        style="@style/CommonImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="false"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_type_folder" />

    <FrameLayout
        android:id="@+id/view_icon_selectable_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />
</FrameLayout>

