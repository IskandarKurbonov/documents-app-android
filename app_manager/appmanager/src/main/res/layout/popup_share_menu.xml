<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/colorSurface"
    android:paddingTop="@dimen/popup_margins_top_bottom"
    android:paddingBottom="@dimen/popup_margins_top_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/popup_share_access_full"
            style="@style/PopupLayout">

            <ImageView
                style="@style/ContextListImage"
                app:srcCompat="@drawable/ic_access_full"
                tools:ignore="ContentDescription" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/PopupText"
                android:text="@string/share_popup_access_full" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/popup_share_access_fill_forms"
            style="@style/PopupLayout">

            <ImageView
                style="@style/ContextListImage"
                app:srcCompat="@drawable/ic_access_fill_form"
                tools:ignore="ContentDescription" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/PopupText"
                android:text="@string/share_popup_access_fill_forms" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/popup_share_access_comment"
            style="@style/PopupLayout">

            <ImageView
                style="@style/ContextListImage"
                app:srcCompat="@drawable/ic_access_comment"
                tools:ignore="ContentDescription" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/PopupText"
                android:text="@string/share_popup_access_comment" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/popup_share_access_review"
            style="@style/PopupLayout">

            <ImageView
                style="@style/ContextListImage"
                app:srcCompat="@drawable/ic_access_review"
                tools:ignore="ContentDescription" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/PopupText"
                android:text="@string/share_popup_access_review" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/popup_share_access_read"
            style="@style/PopupLayout">

            <ImageView
                style="@style/ContextListImage"
                app:srcCompat="@drawable/ic_access_read"
                tools:ignore="ContentDescription" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/PopupText"
                android:text="@string/share_popup_access_read_only" />
        </LinearLayout>

        <include
            android:id="@+id/popup_share_access_separator_deny"
            layout="@layout/view_line_separator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_separator_height"
            android:layout_marginTop="@dimen/line_separator_group_top"
            android:layout_marginBottom="@dimen/line_separator_group_bottom" />

        <LinearLayout
            android:id="@+id/popup_share_access_deny"
            style="@style/PopupLayout">

            <ImageView
                style="@style/ContextListImage"
                app:srcCompat="@drawable/ic_access_deny"
                tools:ignore="ContentDescription" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/PopupText"
                android:text="@string/share_popup_access_deny_access" />
        </LinearLayout>

        <include
            android:id="@+id/popup_share_access_separator_remove"
            layout="@layout/view_line_separator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_separator_height"
            android:layout_marginTop="@dimen/line_separator_group_top"
            android:layout_marginBottom="@dimen/line_separator_group_bottom"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/popup_share_access_remove"
            style="@style/PopupLayout"
            android:visibility="visible">

            <ImageView
                style="@style/ContextListImage"
                android:tint="@color/colorError"
                app:srcCompat="@drawable/ic_trash"
                tools:ignore="ContentDescription" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/PopupText"
                android:textColor="@color/colorError"
                android:text="@string/share_popup_access_deny_remove" />
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

