<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/context_popup_width"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_shape_popup"
    android:orientation="vertical"
    android:paddingBottom="@dimen/default_margin_medium">

    <include
        android:id="@+id/profileItem"
        layout="@layout/account_context_item"
        android:layout_width="@dimen/context_popup_width"
        android:layout_height="@dimen/item_one_line_height" />

    <include
        android:id="@+id/removeItem"
        layout="@layout/account_context_item"
        android:layout_width="@dimen/context_popup_width"
        android:layout_height="@dimen/item_one_line_height" />

</LinearLayout>