<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="@color/colorSurface"
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/operation_sections_my"
            style="@style/OperationLayout">

            <ImageView
                style="@style/OperationImage"
                app:srcCompat="@drawable/ic_drawer_menu_my_docs"
                tools:ignore="ContentDescription" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/ContextListMediumText"
                android:text="@string/navigation_drawer_menu_my" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/colorSurface"
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/operation_sections_share"
            style="@style/OperationLayout">

            <ImageView
                style="@style/OperationImage"
                app:srcCompat="@drawable/ic_share_docs"
                tools:ignore="ContentDescription" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/ContextListMediumText"
                android:text="@string/navigation_drawer_menu_shared" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/colorSurface"
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/operation_sections_common"
            style="@style/OperationLayout">

            <ImageView
                style="@style/OperationImage"
                app:srcCompat="@drawable/ic_drawer_menu_common_docs"
                tools:ignore="ContentDescription" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/ContextListMediumText"
                android:text="@string/navigation_drawer_menu_common" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/colorSurface"
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/operation_sections_projects"
            style="@style/OperationLayout">

            <ImageView
                style="@style/OperationImage"
                app:srcCompat="@drawable/ic_drawer_menu_projects"
                tools:ignore="ContentDescription" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/ContextListMediumText"
                android:text="@string/navigation_drawer_menu_projects" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>


